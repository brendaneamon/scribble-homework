<h2><%= @post.title %> <%= link_to "(edit)", edit_post_path(@post) %></h2>
<h4><%= @post.author %></h4>

<p><%= @post.content%></p>

<h3>Comments <%= link_to "(Add New Comment)", new_post_comment_path( @post ) %></h3>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <p><%= comment.content %></p>
      <h4>&mdash;<%= comment.author %></h4>
      <p><%= comment.created_at %></p>
      <p><%= link_to "(edit)", edit_post_comment_path(@post, comment) %></p>
    </li>
  <% end %>
</ul>
